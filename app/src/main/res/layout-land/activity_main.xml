<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:targetApi="o">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        android:background="@color/material_on_surface_stroke"
        android:title="Japa Clocker"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
    <TextView
        android:id="@+id/tvRoundslabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toRightOf="@id/rvRoundLogLabel"
        app:layout_constraintBottom_toBottomOf="@id/rvRoundLogLabel"
        app:layout_constraintWidth_percent=".35"
        android:background="@color/material_on_surface_stroke"
        android:text="Rounds"
        android:textAlignment="center"
        android:textSize="22sp"
        android:paddingBottom="6sp"/>
    <TextView
        android:id="@+id/tvRounds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvRoundslabel"
        app:layout_constraintLeft_toLeftOf="@id/tvRoundslabel"
        app:layout_constraintRight_toRightOf="@id/tvRoundslabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:textSize="120sp"
        android:clickable="true"
        android:focusable="true"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeMaxTextSize="160sp"
        android:autoSizeStepGranularity="2sp" />
    <TextView
        android:id="@+id/rvRoundLogLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".15"
        android:background="@color/material_on_surface_stroke"
        android:text="Minutes"
        android:textAlignment="center"
        android:textSize="22sp"
        android:paddingBottom="6dp">

    </TextView>

    <!-- Log RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRounds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rvRoundLogLabel"
        app:layout_constraintLeft_toLeftOf="@id/rvRoundLogLabel"
        app:layout_constraintRight_toRightOf="@id/rvRoundLogLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".65"
        app:layout_constraintLeft_toLeftOf="@id/rvRounds"
        app:layout_constraintRight_toRightOf="@id/rvRounds"
        app:layout_constraintBottom_toBottomOf="@id/rvRounds"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/tvMantraslabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toRightOf="@id/rvMantraLogLabel"
        app:layout_constraintBottom_toBottomOf="@id/rvRoundLogLabel"
        app:layout_constraintWidth_percent=".35"
        android:background="@color/material_on_surface_stroke"
        android:text="Mantras"
        android:textAlignment="center"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/tvMantras"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tvMantraslabel"
        app:layout_constraintTop_toBottomOf="@id/tvMantraslabel"
        app:layout_constraintRight_toRightOf="@id/tvMantraslabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:textAlignment="center"
        android:textSize="120sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="50sp"
        android:autoSizeMaxTextSize="160sp"
        android:autoSizeStepGranularity="2sp"
        />
    <TextView
        android:id="@+id/rvMantraLogLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Seconds"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toRightOf="@id/tvRoundslabel"
        app:layout_constraintBottom_toBottomOf="@id/tvRoundslabel"
        app:layout_constraintWidth_percent=".15"
        android:background="@color/material_on_surface_stroke"
        >

    </TextView>

    <!-- Log RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMantras"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/rvMantraLogLabel"
        app:layout_constraintRight_toRightOf="@id/rvMantraLogLabel"
        app:layout_constraintTop_toBottomOf="@id/rvMantraLogLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="end"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".65"
        app:layout_constraintLeft_toLeftOf="@id/rvMantras"
        app:layout_constraintRight_toRightOf="@id/rvMantras"
        app:layout_constraintBottom_toBottomOf="@id/rvMantras"

    android:background="@drawable/gradient" />
</androidx.constraintlayout.widget.ConstraintLayout>